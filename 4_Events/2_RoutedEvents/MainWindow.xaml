<Window x:Class="RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Grid Button.Click="CommonClickHandler">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Margin="20"
                Click="Yes_Click"
                Content="Yes" />
        <Button Grid.Row="1"
                Margin="20"
                Click="No_Click"
                Content="No" />
        <Button Grid.Row="2"
                Margin="20"
                Click="Cancel_Click"
                Content="Cancel" />
        <Label x:Name="OutputLabel"
               Grid.Row="3"
               HorizontalAlignment="Center" />
    </Grid>
</Window>
